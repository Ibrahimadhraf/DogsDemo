<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsFragment">

<ImageView

    android:id="@+id/dogImages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:src="@mipmap/ic_launcher_foreground"
    android:scaleType="fitCenter"
    android:minHeight="200dp"
    />
<TextView
    android:id="@+id/dogName"
    android:text="DogName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/dogImages"
    style="@style/Title"
    android:layout_centerHorizontal="true"
    android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/dogPurpose"
        android:text="Dog Purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogName"
        style="@style/Text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/dogTemperament"
        android:text="Dog Temperament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogPurpose"
        style="@style/Text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/lifeSpan"
        android:text="Dog lifeSpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogTemperament"
        style="@style/Text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"/>
</RelativeLayout>
</layout>